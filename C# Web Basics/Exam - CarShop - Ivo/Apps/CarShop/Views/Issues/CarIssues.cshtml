<div class="container">
    <div class="section">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <div class="page-header text-center">
                    <h2 id="tables">Listed issues for: </h2>
                    <h2 class="font-weight-bold font-italic">@Model.CarYear @Model.CarModel</h2>
                </div>

                <div class="d-flex justify-content-center">
                    <a class="btn btn-block btn-primary text-white mb-3" href="/Issues/Add?CarId=@Model.CarId">Add a new Issue</a>
                </div>

                <div class="component">
                    <table class="table table-hover">
                        <thead class=" table-active">
                            <tr>
                                <th scope="col">Description</th>
                                <th scope="col">Is it fixed?</th>
                                <th scope="col" class="text-center">Fix Issue</th>
                                <th scope="col" class="text-center">Delete Issue</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="table-light">
                                <td>@Model.Description</td>
                                <td>
                                    @if (Model.IsFixed)
                                    {
                                        <span>Yes</span>
                                    }
                                    @if (!Model.IsFixed)
                                    {
                                         <span>Not yet</span>
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-block btn-primary text-white mb-3" href="/Issues/Fix?issueId=@Model.IssueId&CarId=@Model.CarId">Fix Issue</a>
                                </td>
                                <td>
                                    <a class="btn btn-block btn-primary text-white mb-3" href="/Issues/Delete?issueId=@Model.IssueId&CarId=@Model.CarId">Delete Issue</a>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>